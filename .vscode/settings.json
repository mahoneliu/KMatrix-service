{
    "terminal.integrated.env.windows": {
        "JAVA_TOOL_OPTIONS": "-Dfile.encoding=UTF-8",
        "PYTHONIOENCODING": "UTF-8"
    },
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "args": [
                "-NoExit",
                "-Command",
                "$OutputEncoding = [System.Text.Encoding]::UTF8; [Console]::OutputEncoding = [System.Text.Encoding]::UTF8;"
            ]
        }
    },
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "java.compile.nullAnalysis.mode": "disabled",
    "java.configuration.updateBuildConfiguration": "interactive",
    // 禁用 VS Code 的自动构建,避免重复编译
    "java.autobuild.enabled": false,
    // 强制使用 Maven 编译,不使用 VS Code 内置编译器
    "java.import.gradle.enabled": false,
    "java.import.maven.enabled": true,
    // 禁用增量编译,避免 MapStruct 重复生成代码
    "java.project.outputPath": "output/classes",
    // 排除 ruoyi-ai 模块,避免 VS Code 自动编译与 Maven 冲突
    "java.project.sourcePaths": [],
    "files.exclude": {
        "**/ruoyi-modules/ruoyi-ai/target": true
    },
    "java.import.exclusions": [
        "**/ruoyi-modules/ruoyi-ai/**"
    ],
    "java.debug.settings.forceBuildBeforeLaunch": false,
    "java.debug.settings.hotCodeReplace": "auto",
    "java.jdt.ls.vmargs": "-XX:+UseParallelGC -XX:GCTimeRatio=4 -XX:AdaptiveSizePolicyWeight=90 -Dsun.zip.disableMemoryMapping=true -Xmx8G -Xms100m -Xlog:disable"
}